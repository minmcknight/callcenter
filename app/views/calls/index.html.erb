<p id="notice"><%= notice %></p>

<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
      <th>Priority</th>
      <th>Type</th>
      <th>Responder</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Summary</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.priority_id %></td>
        <td><%= call.type_id %></td>
        <td><%= call.responder_id %></td>
        <td><%= call.address %></td>
        <td><%= call.phone_number %></td>
        <td><%= call.summary %></td>
        <td><%= call.status_id %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

