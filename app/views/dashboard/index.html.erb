<div class = "container">
<div class = "column">
<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
      <th>Priority</th>
      <th>Type</th>
      <th>Responder</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Summary</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.priority.name %></td>
        <td><%= call.type.name %></td>
        <td>
          <% if call.responder %>
            <%= call.responder.name %>
          <% else %>
            <%= button_to "Assign", action: "assign", id: call.id%>
          <% end %>
        </td>
        <td><%= call.address %></td>
        <td><%= call.phone_number %></td>
        <td><%= call.summary %></td>
        <td><%= call.status.name %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Call', new_call_path %>
</div>
<div class = "column">
<h1>Listing Responders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responders.each do |responder| %>
      <tr>
        <td><%= responder.name %></td>
        <td><%= responder.status.name %></td>
        <td><%= link_to 'Show', responder %></td>
        <td><%= link_to 'Edit', edit_responder_path(responder) %></td>
        <td><%= link_to 'Destroy', responder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Responder', new_responder_path %>

</div>
</div>
